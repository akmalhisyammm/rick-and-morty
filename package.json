{
  "name": "rick-and-morty",
  "version": "0.1.0",
  "private": true,
  "description": "Explore the Rick and Morty universe",
  "author": "Muhammad Akmal Hisyam",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postbuild": "next-sitemap --config next-sitemap.config.mjs",
    "start": "next start",
    "test": "jest --watch",
    "test:ci": "jest --ci --collect-coverage --verbose",
    "lint": "bun lint:next && bun lint:biome",
    "lint:next": "next lint",
    "lint:biome": "biome lint ./src",
    "format": "biome check --write ./src next.* next-sitemap.* commitlint.*",
    "format:check": "biome ci ./src next.* next-sitemap.* commitlint.*",
    "type:check": "tsc --noEmit",
    "release": "cross-env HUSKY=0 standard-version",
    "release:push": "git push --follow-tags origin main",
    "husky": "husky"
  },
  "dependencies": {
    "@apollo/client": "^3.10.8",
    "@hookform/resolvers": "^3.9.0",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "graphql": "^16.9.0",
    "lucide-react": "^0.407.0",
    "next": "14.2.5",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.3.0",
    "nextjs-toploader": "^1.6.12",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.1",
    "sharp": "^0.33.4",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.39",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akmalhisyammm/rick-and-morty"
  },
  "bugs": {
    "url": "https://github.com/akmalhisyammm/rick-and-morty/issues"
  }
}
